rules_version = '2';

// ğŸ” RÃ¨gles de sÃ©curitÃ© Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
    
    // ğŸ§™â€â™‚ï¸ Photos de profil utilisateur
    match /profile_photos/{userId} {
      // Seul le propriÃ©taire peut uploader/modifier sa photo
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Images seulement
      
      // Tout le monde peut voir les photos de profil
      allow read: if request.auth != null;
    }
    
    // ğŸµ Fichiers audio des sorts (existant)
    match /sounds/{soundId} {
      // Lecture : tous les utilisateurs authentifiÃ©s
      allow read: if request.auth != null;
      
      // Ã‰criture : seulement les admins + vÃ©rifications fichiers
      allow write: if request.auth != null && 
                   get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('audio/.*'); // Audio seulement
    }
    
    // ğŸš« Toutes les autres ressources sont interdites par dÃ©faut
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 